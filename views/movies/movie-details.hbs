<h2>Details of {{title}}</h2>

<div>
    <h3>{{title}}</h3>
    <p>Genre: {{genre}}</p>
    <p>Plot: {{plot}}</p>

    {{#each this.cast}}
        <p>{{this.name}}</p>
        <p>{{this.occupation}}</p>
        <p>{{this.catchPhrase}}</p>
    {{/each}}

    <form action="/movies/{{_id}}/delete" method="post">
    <button type="submit">Delete movie</button>
    </form>
    <br>
    <a href="/movies/{{_id}}/edit">Edit movie</a>
</div>